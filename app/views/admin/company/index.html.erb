<section class="content-header">
  <div class="row">
    <div class="col-8">
      <h1>
        企業名検索
      </h1>
    </div>
    <div class="col-4">
      <%= link_to '新規作成', new_admin_company_path, class: "btn btn-primary" %>
    </div>
  </div>
</section>
<section class="content">
  <%= form_tag admin_company_index_path, class: "form-row align-items-center mb-2", method: "get" do %>
    <div class="col-12 col-md-4 mb-2">
      <div class="input-group">
        <div class="input-group-addon"><i class="fa fa-search" aria-hidden="true"></i></div>
        <input type="text" class="form-control" placeholder="企業名" name="query">
      </div>
    </div>
    <div class="col-6 col-md-1 mb-2">
      <button type="submit" class="btn btn-primary">検索</button>
    </div>
  <% end %>
  <div class="row">
    <div class="col-12">
      <div class="box">
        <div class="box-footer clearfix">
          <%= paginate @companies, views_prefix: 'customer' %>
        </div>
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tr>
              <th>企業名</th>
              <th>住所</th>
              <th>電話番号</th>
              <th>&nbsp;</th>
            </tr>
            <% @companies.each do |company| %>
              <tr>
                <td><%= company.name %></td>
                <td><%= company.address %></td>
                <td><%= company.tel %></td>
                <td><%= link_to '編集', edit_admin_company_path(company.id), class: 'btn btn-success' %></td>
              </tr>
            <% end %>
          </table>
        </div>
        <div class="box-footer clearfix">
          <%= paginate @companies, views_prefix: 'customer' %>
        </div>
      </div>
    </div>
  </div>
</section>
