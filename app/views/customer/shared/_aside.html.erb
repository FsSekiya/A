<aside class="main-sidebar">
  <section class="sidebar" style="height: auto;">
    <div class="user-panel">
      <div class="pull-left image">
        <img src="http://placeimg.com/160/160/people" class="img-circle" alt="User Image">
      </div>
      <div class="pull-left info">
        <p>Alexander Pierce</p>
        <div><i class="fa fa-circle text-success"></i>カウンティア株式会社</div>
      </div>
    </div>
    <ul class="sidebar-menu tree" data-widget="tree">
      <li class="header">選択してください</li>
      <li class="treeview <%= 'active menu-open' if controller_name == 'branch' %>">
        <a href="#">
          <i class="fa fa-male"></i> <span>WORKER</span>
          <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
          </span>
        </a>
        <ul class="treeview-menu">
          <li>
            <%= link_to customer_branch_index_path do %>
              <i class="fa fa-circle-o"></i>
              全店舗
            <% end %>
          </li>
        </ul>
      </li>
      <li class="treeview <%= 'active menu-open' if controller_name == 'record' %>">
        <a href="#">
          <i class="fa fa-file"></i>
          <span>RECORD</span>
          <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
          </span>
        </a>
        <ul class="treeview-menu">
          <li class="active">
            <%= link_to customer_record_index_path do %>
              <i class="fa fa-circle-o"></i>
              全店舗
            <% end %>
          </li>
        </ul>
      </li>
      <li>
        <%= link_to customer_setting_index_path do %>
          <i class="fa fa-cog"></i>
          <span>SETTING</span>
        <% end %>
      </li>
    </ul>
  </section>
</aside>
