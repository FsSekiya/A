<header class="main-header">
  <%= link_to customer_dashboard_index_path, class: 'logo' do %>
    <span class="logo-mini"><b>A</b>LT</span>
    <span class="logo-lg"><b>Admin</b>LTE</span>
  <% end %>
  <nav class="navbar navbar-static-top">
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <% if current_customer.image.present? %>
              <%= image_tag current_customer.image, class: "img-circle", alt: "User Image", size: '25x25' %>
            <% else %>
              <%= image_tag 'common/profile.svg', class: "img-circle", alt: "User Image", size: '25x25' %>
            <% end %>
            <span class="hidden-xs"><%= current_customer.name %></span>
          </a>
          <ul class="dropdown-menu">
            <li class="user-header">
              <% if current_customer.image.present? %>
                <%= image_tag current_customer.image, class: "img-circle", alt: "User Image", size: '90x90' %>
              <% else %>
                <%= image_tag 'common/profile.svg', class: "img-circle", alt: "User Image", size: '90x90' %>
              <% end %>
              <p>
                Alexander Pierce - Web Developer
                <small>Member since Nov. 2012</small>
              </p>
            </li>
            <li class="user-body">
              <div class="row">
                <div class="col-xs-4 text-center">
                  <a href="#">Followers</a>
                </div>
                <div class="col-xs-4 text-center">
                  <a href="#">Sales</a>
                </div>
                <div class="col-xs-4 text-center">
                  <a href="#">Friends</a>
                </div>
              </div>
            </li>
            <li class="user-footer">
              <div class="pull-left">
                <a href="#" class="btn btn-default btn-flat">Profile</a>
              </div>
              <div class="pull-right">
                <%= link_to 'Sign out', destroy_customer_session_path, method: 'delete', class: 'btn btn-default btn-flat' %>
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>
