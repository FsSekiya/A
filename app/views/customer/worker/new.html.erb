<section class="content-header">
  <div class="row">
    <div class="col-8">
      <h1>
        <%= @worker.branch.name%>支店勤務登録
      </h1>
    </div>
  </div>
</section>

<section class="content">
  <div class="row">
    <div class="col-12">
      <div class="box">
        <div class="box-body">
          <%= simple_form_for(@worker, url: customer_worker_index_path, method: :post) do |f| %>
            <%= f.input :branch_id, as: :hidden %>
            <%= f.input :name %>
            <%= f.input :email %>
            <%= f.input :image, as: :file %>
            <%= f.button :submit %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

